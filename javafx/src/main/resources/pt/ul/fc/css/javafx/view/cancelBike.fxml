<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="pt.ul.fc.css.javafx.controller.CancelBicycleController"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">

    <children>
        <Label text="Cancel a Bicycle Reservation" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <ComboBox fx:id="tripCombo" promptText="Select a bike" prefWidth="300" />

        <Button fx:id="btnCancel" text="Cancel Reservation" onAction="#doCancel" prefWidth="200" />

        <Button text="Back" onAction="#back" prefWidth="200" />

        <Label fx:id="labelStatus" text="" visible="false" style="-fx-text-fill: red;" wrapText="true" />
    </children>
</VBox>
