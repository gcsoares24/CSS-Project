<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="pt.ul.fc.css.javafx.controller.EndTripController"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">

    <children>
        <Label text="Return a Bicycle / End Trip" 
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Select the active trip to end -->
        <ComboBox fx:id="tripCombo" promptText="Select your active trip" prefWidth="300" />

        <!-- Select the return station -->
        <ComboBox fx:id="stationCombo" promptText="Select return station" prefWidth="300" />

        <!-- Button to end the trip -->
        <Button fx:id="btnEndTrip" text="End Trip" onAction="#doEndTrip" prefWidth="200" />

        <!-- Back button -->
        <Button text="Back" onAction="#back" prefWidth="200" />

        <!-- Status message -->
        <Label fx:id="labelStatus" text="" visible="false" 
               style="-fx-text-fill: red;" wrapText="true" />
    </children>
</VBox>
