<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="pt.ul.fc.css.javafx.controller.StationListController"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" alignment="CENTER" prefWidth="500" prefHeight="400">

    <children>
        <Label text="Stations List" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label text="(Double-click a station to see details)" style="-fx-font-size: 12px; -fx-text-fill: gray;" />

        <TableView fx:id="stationTable" prefWidth="450" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="250"/>
                <TableColumn fx:id="colDocks" text="Docks" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <Button text="Back" onAction="#backToMenu" prefWidth="200" />
    </children>
</VBox>